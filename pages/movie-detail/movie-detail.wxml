<view class="container">
   <video style="width: 100%;" poster="{{movie.cover}}" src="{{movie.video}}" controls />
  <view class="movie-content">
    <view class="title">
      <text>{{movie.title}}</text>
    </view>
    <view class="type">
      <text>{{movie.rate}}分 / {{movie.types}}</text>
    </view>
    <view class="pubdate">
      上映时间：{{movie.pubdate}}{{movie.country}}
    </view>
    <view class="summary">
      {{movie.summary}}
    </view>
    <view class="tags">
      <text wx:for="{{movie.tags}}" wx:key="{{index}}">{{item}}</text>
    </view>
  </view>
</view>